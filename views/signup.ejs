<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="./dashboard.css"/>
</head>
<body style="background: white;">
    <div class="login">
        <div class="login__header">
            <h6>Sign Up for skype clone</h6>
            <!--ICON HERE-->
        </div>
        <form class="signup__form" action="/createuser" method="POST">
            <label for="usernameInput"></label>
            <input class="signup__username" type="text" name="username" id="usernameInput"/>
            <label minlength="6" maxlength="20" for="passwordInput"></label>
            <input class="signup__password" minlength="6" maxlength="20" type="password" id="passwordInput" name="password"/>
            <div class="signup__button" style="padding: 1px;">
            <input disabled class="login__submitButton" type="submit" value="Create User"/>
            </div>
        </form>
    </div>
    <script>
        document.querySelector('.signup__button').addEventListener('mouseenter', function(e){
            console.log('entered')
            console.log(document.querySelector('.signup__password').value)
            if(document.querySelector('.signup__username').value !== '' &&
            document.querySelector('.signup__password').value !== ''){
                console.log('removed')
                document.querySelector('.login__submitButton').removeAttribute('disabled');
            }
            else{
                document.querySelector('.login__submitButton').disabled = true;
            }
        })
    </script>
</body>
</html>