<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="./dashboard.css"/>
    <script>const render_Error_Message = "<%= renderErrorMessage %>"</script>
</head>
<body style="background: white;">
    <div class="login">
        <div class="login__header">
            <h6>Login With Skype Clone</h6>
            <!--ICON HERE-->
        </div>
        <form class="login__form" action="/userlogin" method="POST">
            <label for="usernameInput"></label>
            <input class="login__username" type="text" name="username" id="usernameInput"/>
            <label minlength="6" maxlength="20" for="passwordInput"></label>
            <input class="login__password" minlength="6" maxlength="20" type="password" id="passwordInput" name="password"/>
            <div class="login__button" style="padding: 1px;">
            <input disabled class="login__submitButton" type="submit" value="Sign In"></input>
            </div>
        </form>
        <!--Button will route to another identical 'Signup' page which creates an account and signs them in after-->
        <a class="login__signUpButton" href="/signup">Sign up for an account</a>
        <div style="display: none; text-align: center; border-radius: 5px; max-width: 315px; font-weight: 700; background: red; color: white; padding: 5px; margin-top: 10px;" class="login__error" style="display: none;">Please enter a valid username and password</div>
    </div>
    <script>
        document.querySelector('.login__button').addEventListener('mouseenter', function(e){
            console.log('entered')
            console.log(document.querySelector('.login__password').value)
            if(document.querySelector('.login__username').value !== '' &&
            document.querySelector('.login__password').value !== ''){
                console.log('removed')
                document.querySelector('.login__submitButton').removeAttribute('disabled');
            }
            else{
                document.querySelector('.login__submitButton').disabled = true;
            }
        })
        if(render_Error_Message === 'true'){
            document.querySelector('.login__error').style.display = 'block'
        }
        document.querySelector('.login__username').addEventListener('change', function(){
            document.querySelector('.login__error').style.display = 'none'
        })
        document.querySelector('.login__password').addEventListener('change', function(){
            document.querySelector('.login__error').style.display = 'none'           
        })
    </script>
</body>
</html>